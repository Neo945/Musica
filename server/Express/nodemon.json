{
    "restartable": "rs",
    "ignore": [".git", "node_modules/**/node_modules"],
    "verbose": false,
    "execMap": {
        "js": "node --harmony"
    },
    "events": {
        "restart": "yarn run lint:fix"
    },
    "watch": ["."],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json"
}
